<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="walker.pack.IndoorMapActivity">

    <view
        class="walker.pack.customviews.AnimationView"
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        layout="@layout/indoor_location_section_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <include
        layout="@layout/indoor_instructions_section_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>

</RelativeLayout>
