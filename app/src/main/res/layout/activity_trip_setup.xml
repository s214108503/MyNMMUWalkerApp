<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="walker.pack.TripSetupActivity">

    <Button
        android:id="@+id/btn_unknown_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="216dp"
        android:layout_marginRight="32dp"
        android:layout_alignBottom="@+id/btn_unknown_destination"
        android:layout_toStartOf="@+id/btn_unknown_destination"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="6dp" />

    <Button
        android:id="@+id/btn_unknown_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="216dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/txt_specify"
        android:layout_alignEnd="@+id/txt_specify" />

    <TextView
        android:id="@+id/txt_specify"
        android:text="@string/specify_your_current_and_destination_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="152dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="206dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
